                  Fill="{DynamicResource BlackBrush}"
                  Stretch="Fill" />
        </Canvas>
        <Canvas x:Key="appbar_cloud_download"
                Width="76"
                Height="76"
                Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
            <Path Canvas.Left="19"
                  Canvas.Top="28.4999"
                  Width="38"
                  Height="20.5001"
                  Data="F1 M 49.0833,33.25C 53.4555,33.25 57,36.7945 57,41.1667C 57,45.5389 53.4045,48.9999 49,49L 39,49L 45,43L 41,43L 41,37L 37,37L 37,43L 33,43L 39,49L 23,49C 20.814,48.9999 19,47.3111 19,45.125C 19,43.1867 20.3931,41.5738 22.2328,41.233L 22.1667,40.3749C 22.1667,37.3993 24.5123,34.9713 27.4553,34.8389C 28.7579,31.1462 32.2783,28.4999 36.4167,28.4999C 40.3459,28.4999 43.7179,30.8853 45.1637,34.2869C 46.3193,33.627 47.6573,33.25 49.0833,33.25 Z "
                  Fill="{DynamicResource BlackBrush}"
                  Stretch="Fill" />
        </Canvas>
    </Controls:MetroWindow.Resources>

    <Controls:MetroWindow.Flyouts>
        <Controls:FlyoutsControl x:Name="flyoutsControl">
            <Controls:Flyout Position="Bottom" TitleVisibility="Collapsed">
                <StackPanel Height="80"
                            Margin="5,5,5,5"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    <Button Width="40"
                            Height="40"
                            Command="{Binding DownloadCommand}"
                            FontFamily="Segoe UI Symbol"
                            FontSize="16"
                            Style="{DynamicResource MetroCircleButtonStyle}"
                            ToolTip="添付ファイルダウンロード">
                        <Rectangle Width="20"
                                   Height="20"
                                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button},
                                                  Path=Foreground}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Uniform" Visual="{StaticResource appbar_cloud_download}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Button>
                    <Button Width="40"
                            Height="40"
                            Click="Refresh"
                            FontFamily="Segoe UI Symbol"
                            FontSize="16"
                            Style="{DynamicResource MetroCircleButtonStyle}"
                            ToolTip="更新">
                        <Rectangle Width="20"
                                   Height="20"
                                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button},
                                                  Path=Foreground}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Uniform" Visual="{StaticResource appbar_refresh}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Button>
                </StackPanel>
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Controls:MetroWindow.Flyouts>

    <Grid>
        <Controls:MetroAnimatedSingleRowTabControl>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <commands:EventToCommand Command="{Binding SelectionChangedCommand}" PassEventArgsToCommand="True" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <TabItem Header="users">
                <view:UserList />
            </TabItem>
            <TabItem Header="groups">
                <view:GroupList />
            </TabItem>
            <TabItem Header="inactive">
                <view:InactiveProjextList />
            </TabItem>
            <TabItem Header="revival">
                <view:RevivalProjextList />
            </TabItem>
            <TabItem Header="death">
                <view:DeathProjextList />
            </TabItem>
        </Controls:MetroAnimatedSingleRowTabControl>
        <Border Background="#22000000">
            <Border.Visibility>
                <Binding Path="IsBusy">
                    <Binding.Converter>
                        <l:VisibilityAndBooleanConverter ConvertWhenFalse="Collapsed" ConvertWhenTrue="Visible" />
                    </Binding.Converter>
                </Binding>
            </Border.Visibility>
            <Controls:ProgressRing Width="40" Height="40" />
        </Border>
    </Grid>
</Controls:MetroWindow>
